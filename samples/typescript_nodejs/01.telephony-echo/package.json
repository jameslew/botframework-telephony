{
  "name": "echobot",
  "version": "1.0.0",
  "description": "Telephony echo bot sample",
  "author": "Microsoft",
  "license": "MIT",
  "main": "./lib/index.js",
  "scripts": {
    "build": "node esbuild.js",
    "lint": "eslint src",
    "start": "node esdev.js && node ./lib/index.js",
    "deploy": "az webapp deployment source config-zip --resource-group  --name  --src dist/dist.zip",
    "watch": "nodemon --watch ./src -e ts --exec \"npm run start\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/botframework-telephony"
  },
  "dependencies": {
    "botbuilder": "^4.12.0",
    "dotenv": "^8.2.0",
    "replace": "^1.2.1",
    "restify": "~8.5.1"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.1",
    "@types/restify": "8.5.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "esbuild": "^0.11.6",
    "eslint": "^7.23.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3"
  }
}
